{
  "manifest_version": 2,
  "name": "Copy Tab URL",
  "version": "2.0",
  "description": "Copies the URL of the active tab to the clipboard.",
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "theme",
    "storage"
  ],
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon.png"
  },
  "web_accessible_resources": [
    "icons/*.svg",
    "icons/*.png"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Copy Tab URL",
    "default_popup": "popup/popup.html"
  },
    "page_action": {
    "default_title": "Copy Tab URL (URL bar)",
    "default_icon": "icons/icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": true
  },
    "commands": {
    "copy-url-command": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Copies the current tabâ€™s URL or base URL, according to user preference"
    }
  }
}
